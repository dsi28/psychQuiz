<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/completeQuizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="16dp"

        android:textSize="33sp"
        android:text="The Quiz is complete!"/>
    <TextView
        android:id="@+id/scoreHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeQuizTitle"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:text="You scored:"/>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreHeading"
        android:layout_marginTop="16dp"

        android:text="1000"
        android:textSize="77sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/scoreText"
        android:gravity="center"
        android:layout_marginBottom="22dp"
        android:textSize="22sp"
        android:text="Thank you for playing"/>



</RelativeLayout>