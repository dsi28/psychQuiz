<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"
    >

    <ImageView
        android:id="@+id/picCup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cup"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"/>


    <TextView
        android:id="@+id/completeQuizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_margin="@dimen/defaultSpacing"

        android:textSize="@dimen/headingTextSize"
        android:text="@string/completeMessage"/>
    <TextView
        android:id="@+id/scoreHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/picCup"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/defaultSpacing"
        android:textSize="@dimen/questionTextSize"
        android:text="@string/scoreMessage"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreHeading"
        android:layout_marginTop="@dimen/defaultSpacing"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/questionNumberTextSize"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/scoreText"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="@dimen/defaultSpacing"
        android:textStyle="bold"
        android:textSize="@dimen/questionTextSize"
        android:text="@string/thanksMessage"/>



</RelativeLayout>