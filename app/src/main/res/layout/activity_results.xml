<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Results_Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picCup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/cup" />


        <TextView
            android:id="@+id/completeQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/defaultSpacing"
            android:gravity="center"
            android:text="@string/completeMessage"
            android:textColor="@color/colorAccent"

            android:textSize="@dimen/headingTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/picCup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/defaultSpacing"
            android:text="@string/scoreMessage"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/questionTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoreHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/defaultSpacing"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/questionNumberTextSize"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/scoreText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="@dimen/defaultSpacing"
            android:text="@string/thanksMessage"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/questionTextSize"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>